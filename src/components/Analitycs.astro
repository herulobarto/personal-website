---
const GA_ID = 'G-GHJ2P1RFH5';
const isProd = import.meta.env.PROD;
---

{isProd && (
  <>
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`}></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){ dataLayer.push(arguments); }
      gtag('js', new Date());
      gtag('config', '{GA_ID}');
    </script>
  </>
)}
